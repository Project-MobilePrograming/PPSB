<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CariBarangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARI BARANG"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Input Pencarian -->
        <EditText
            android:id="@+id/etCariBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari Barang"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Tombol Cari -->
        <Button
            android:id="@+id/btnCariBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CARI"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView untuk Menampilkan Hasil Pencarian -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCariBarang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>