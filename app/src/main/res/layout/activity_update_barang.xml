<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".UpdateStockActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Stok Barang"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/purple_200"
        android:textColor="@android:color/white" />

    <!-- Form Input -->
    <EditText
        android:id="@+id/etItemCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kode Barang"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etStockQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Stok"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <!-- Input Gambar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gambar Barang"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Gambar"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white" />

    <!-- Tombol Aksi -->
    <Button
        android:id="@+id/btnUpdateStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Stok"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white" />
</LinearLayout>
